<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-4.0.xsd ">
               
	<!-- 如果属性类型匹配某个Bean的类型，则该Bean被注入到属性中；否则不会注入。如果找到多个Bean，则抛出异常。-->
	<bean id="walkman" class="quickstart.Walkman" autowire="byType">
		<constructor-arg name="name" value="Sony" />
		<!-- quickstart.Walkman类中的tape属性是quickstart.ITape类型，容器会自动寻找quickstart.ITape类型的Bean。 -->
	</bean>
	
	<!-- 类型为quickstart.ITape的Bean -->
	<bean id="tape" class="quickstart.Tape" />
</beans>         