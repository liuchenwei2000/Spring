<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-4.0.xsd ">
               
	<!-- 如果属性名匹配某个Bean的id，则该Bean被注入到属性中；否则不会注入。-->
	<bean id="walkman" class="quickstart.Walkman" autowire="byName">
		<constructor-arg name="name" value="Sony" />
		<!-- quickstart.Walkman类中有setTape方法，属性名为tape，容器会自动寻找id为tape的Bean。 -->
	</bean>
	
	<!-- id为tape的Bean -->
	<bean id="tape" class="quickstart.Tape" />
</beans>         