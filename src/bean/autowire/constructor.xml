<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-4.0.xsd ">
               
	<!-- 如果使用构造函数注入来配置Bean，可以放弃<constructor-arg>元素，让Spring从容器的Bean中自动选择与构造函数参数同类型的Bean。 -->
	<bean id="walkman" class="quickstart.Walkman" autowire="constructor">
		<constructor-arg name="name" value="Sony" />
		<!-- quickstart.Walkman的构造函数有一个quickstart.ITape类型的参数 -->
	</bean>
	
	<!-- 类型为quickstart.ITape的Bean -->
	<bean id="tape" class="quickstart.Tape" />
</beans>         