<?xml version="1.0" encoding="UTF-8"?>
<!--  
Spring提供了JdbcDaoSupport、NamedParameterJdbcDaoSupport和SimpleJdbcDaoSupport类用于编写基于JDBC的DAO类的基类，
可以让DAO类直接继承它们，然后把数据源直接装配到从XxxDaoSupport集成的dataSource属性，
XxxDaoSupport会在内部创建一个合适的Template实例，从而使得XML文件中减少了一个Bean。
-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-4.0.xsd ">
             
	<!-- 配置DAO -->             
	<bean id="employeeDao" class="jdbc.daosupport.JdbcEmployeeDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- 配置数据源 -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/test" />
		<property name="username" value="root" />
		<property name="password" value="woailo99" />
	</bean>
</beans>         